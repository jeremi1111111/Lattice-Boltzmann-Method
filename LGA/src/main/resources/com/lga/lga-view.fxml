<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: navajowhite;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lga.LGAController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Canvas fx:id="canvas" height="200.0" width="200.0" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button mnemonicParsing="false" onMouseClicked="#onSimulateButtonClick"
                style="-fx-background-color: antiquewhite; -fx-border-color: grey; -fx-border-radius: 5;"
                text="Simulate"/>
        <HBox fx:id="controlPanel" alignment="CENTER" spacing="10.0">
            <Label text="Iteration:"/>
            <TextField fx:id="iteration" alignment="CENTER" prefWidth="50.0"/>
        </HBox>
    </HBox>
</VBox>
